{
  "name": "@codetanzania/emis-api-client",
  "version": "0.10.0",
  "description": "http client for EMIS API.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "clean": "rimraf lib dist es umd",
    "build": "npm run clean && rollup -c",
    "lint:src": "eslint --fix --ext .js src/ rollup.config.js",
    "lint": "npm run build && eslint --fix --ext .js src/ test/ rollup.config.js",
    "test": "npm run lint -s && mocha test/**/*.spec.js",
    "cmt": "git add -A && git-cz",
    "changelog": "changelog"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeTanzania/emis-api-client.git"
  },
  "keywords": [
    "codetanzania",
    "emis",
    "emis-api",
    "emis-api-client",
    "http",
    "axios"
  ],
  "contributors": [
    {
      "name": "Benson Maruchu",
      "email": "benmaruchu@gmail.com",
      "url": "https://github.com/BenMaruchu"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeTanzania/emis-api-client/issues"
  },
  "homepage": "https://github.com/CodeTanzania/emis-api-client#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/travis-cli": "^7.5.2",
    "axios": "^0.18.0",
    "chai": "^4.2.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "generate-changelog": "^1.7.1",
    "husky": "^1.3.1",
    "inflection": "^1.12.0",
    "lint-staged": "^8.1.5",
    "lodash": ">=4.17.11",
    "mocha": "^6.0.2",
    "moment": ">=2.24.0",
    "nock": "^10.0.6",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0"
  },
  "peerDependencies": {
    "axios": ">=0.18.0",
    "inflection": ">=1.12.0",
    "lodash": ">=4.17.11",
    "moment": ">=2.24.0"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:src",
      "git add -A"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
